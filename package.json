    "cssnano": "^4.1.10",
    "file-loader": "^3.0.1",
    "html-beautify-webpack-plugin": "^1.0.5",
    "html-webpack-plugin": "^3.2.0",
    "mini-css-extract-plugin": "^0.6.0",
    "node-sass": "^7.0.0",
    "path": "^0.12.7",
