include ./components/page/page

doctype html
html(lang = "en")

  head
    meta(charset = "utf-8")
    meta(http-equiv = "X-UA-Compatible" content = "IE=edge")
    meta(name = "viewport" content = "width=device-width, initial-scale=1")
    meta(name = "theme-color" content = "#000000")
    meta(name = "msapplication-TileColor" content = "#da532c")
    meta(name = "msapplication-TileImage" content = require('@favicons/mstile-144x144.png'))
    meta(name = "msapplication-config" content = require('@favicons/browserconfig.xml'))

    title Webpack SP

    link(rel = "icon" href = require('@favicons/favicon.ico') type = "image/ico")
    link(rel = "icon" href = require('@favicons/favicon.svg') sizes = "any" type = "image/svg+xml")
    link(rel = "icon" href = require('@favicons/icon-16x16.png') sizes = "16x16" type = "image/png")
    link(rel = "icon" href = require('@favicons/icon-32x32.png') sizes = "32x32" type = "image/png")
    link(rel = "apple-touch-icon" href = require('@favicons/apple-touch-icon.png') sizes = "180x180")
    link(rel = "manifest" href = require('@favicons/site.webmanifest') crossorigin = "use-credentials")
    link(rel = "mask-icon" href = require('@favicons/safari-pinned-tab.svg') color = "#d55b5d")

  +page
